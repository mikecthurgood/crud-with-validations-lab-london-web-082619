<h1>Create New Song</h1>

<%= render "form", song: @song %>
<br><% if @song.errors.any? %>
    <div id="error_explanation">
      <h3>There were some errors:</h3>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

  <% end %>
<%= link_to 'Back', songs_path %> 